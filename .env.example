# ZSPRD Portfolio Analytics - Environment Configuration
# Copy this file to .env and update with actual values
# DO NOT commit .env to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=ZSPRD Portfolio Analytics
APP_VERSION=1.0.0
APP_DESCRIPTION=Portfolio analytics and insights platform
API_PREFIX=v1
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# REQUIRED: Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256

# JWT Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
VERIFICATION_TOKEN_EXPIRE_HOURS=24
RESET_TOKEN_EXPIRE_MINUTES=60

# Password Security Requirements
MIN_PASSWORD_LENGTH=8
MAX_PASSWORD_LENGTH=128
REQUIRE_PASSWORD_UPPERCASE=true
REQUIRE_PASSWORD_LOWERCASE=true
REQUIRE_PASSWORD_DIGIT=true
REQUIRE_PASSWORD_SPECIAL=false

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
# PostgreSQL Database Settings - ALL REQUIRED
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=secure
POSTGRES_DB=zsprd_dev

# Full Database URLs - REQUIRED
DATABASE_URL=postgresql://dev_user:secure@localhost:5432/zsprd_dev

# Database Debugging
DATABASE_ECHO=true

# pgAdmin 4
PGADMIN_EMAIL: admin@zsprd.com
PGADMIN_PASSWORD: admin123

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
# Cache expiration in seconds (3600 = 1 hour, 0 = never expire)
CACHE_EXPIRE_SECONDS=3600

# =============================================================================
# EMAIL CONFIGURATION (REQUIRED)
# =============================================================================
# SMTP Settings - ALL REQUIRED for password reset functionality
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_STARTTLS=true
MAIL_SSL_TLS=false
MAIL_FROM=your-email@gmail.com
MAIL_FROM_NAME=ZSPRD Support

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# Alpha Vantage - Required for market data
# Get free key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# =============================================================================
# OAUTH PROVIDERS (OPTIONAL)
# =============================================================================
# Google OAuth (Get from: https://console.developers.google.com/)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Apple OAuth (Get from: https://developer.apple.com/)
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=
APPLE_KEY_ID=
APPLE_TEAM_ID=
APPLE_PRIVATE_KEY_PATH=

# =============================================================================
# FRONTEND & CORS
# =============================================================================
FRONTEND_URL=http://localhost:3000
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# CORS (Cross-Origin Resource Sharing) - OPTIONAL
# Your config.py already has good defaults for development:
# - http://localhost:3000 (Next.js dev)
# - https://app.zsprd.com (production)
# Only add these if you need different URLs:
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_LOGIN=5/15minutes
RATE_LIMIT_REGISTER=3/hour
RATE_LIMIT_PASSWORD=2/hour
RATE_LIMIT_REFRESH=3/day

# Session Management
MAX_FAILED_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15
MAX_ACTIVE_SESSIONS=5
SESSION_INACTIVE_DAYS=30
REMEMBER_ME_DAYS=30

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=

# Sentry (Error Tracking) - Optional
SENTRY_DSN=

# =============================================================================
# SECURITY MONITORING
# =============================================================================
ENABLE_AUDIT_LOGS=true
TRACK_LOGIN_ATTEMPTS=true
ALERT_ON_SUSPICIOUS_LOGIN=true
NEW_DEVICE_NOTIFICATION=true

# =============================================================================
# API DOCUMENTATION
# =============================================================================
DOCS_URL=/api/v1/docs
REDOC_URL=/api/v1/redoc
OPENAPI_URL=/api/v1/openapi.json

# =============================================================================
# PRODUCTION SECURITY SETTINGS
# =============================================================================
REQUIRE_HTTPS=false
SECURE_COOKIES=false
HSTS_MAX_AGE=31536000

# =============================================================================
# NOTES FOR SETUP
# =============================================================================
# 1. REQUIRED fields that must be set before running:
#    - SECRET_KEY (generate a secure random key)
#    - All POSTGRES_* fields
#    - DATABASE_URL
#    - All MAIL_* fields
#    - ALPHA_VANTAGE_API_KEY

# 2. Optional fields can be left empty for basic functionality
# 3. OAuth fields only needed if you want Google/Apple login
# 4. CORS settings have defaults in config.py but can be overridden here